{{- $pctx := . -}}
{{- if .IsHome -}}
  {{- $pctx = .Site }}
{{- end -}}

{{- $pages := slice -}}
{{- $limit := 20 }}

<!-- Set limit from config if available -->
{{- with .Site.Config.Services.RSS.Limit -}}
  {{- $limit = . -}}
{{- end -}}

<!-- Get pages -->
{{- if .IsHome -}}
  {{- $pages = $pctx.RegularPages -}}
{{- else -}}
  {{- $pages = $pctx.RegularPages -}}
{{- end -}}

<!-- Limit pages safely -->
{{- if gt $limit 0 -}}
  {{- if ge (len $pages) $limit -}}
    {{- $pages = $pages | first $limit -}}
  {{- end -}}
{{- end -}}

<!-- XML Declaration -->
{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ if eq .Title .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{.}} on {{ end }}{{ .Site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ with .Site.Params.description }}{{.}}{{ end }}</description>
    <generator>Hugo -- gohugo.io</generator>
    <!-- Language: use .Lang only -->
    <language>{{ .Site.Language.Lang }}</language>
    {{- with .Site.Params.copyright }}<copyright>{{ . }}</copyright>{{- end }}

    <!-- âœ… Safe check for DisableDates -->
    {{- $disableDates := false }}
    {{- with .Site.Config.Privacy }}
      {{- if isset . "RSS" }}
        {{- with .RSS }}
          {{- $disableDates = .DisableDates }}
        {{- end }}
      {{- end }}
    {{- end }}

    {{- if not $disableDates }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    {{- end }}

    <!-- Items -->
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{- if not $disableDates }}
        {{- with .Site.Author }}
          <author>{{ with .email }}{{ . }}{{ end }}{{ with .name }} ({{ . }}){{ end }}</author>
        {{- end }}
      {{- end }}
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
      <content:encoded>{{ .Content | html }}</content:encoded>
    </item>
    {{- end }}
  </channel>
</rss>
